<div class="container">
	<h3>Users</h3>

	<table class="table">
		<tr>
			<th>Item Name</th>
			<th>URL to Item</th>
			<th>Name of needer</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

		<% _.each(grocerys, function (grocery) { %>
		<tr data-id="<%= grocery.id %>" data-model="grocery">
			<td><%= grocery.item %></td>
			<td><%= grocery.linkToItem %></td>
			<td><%= grocery.nameOfNeeder %></td>
			<td><a href="/grocery/show/<%= grocery.id %>" class="btn btn-sm btn-primary">Show</a></td>
			<td><a href="/grocery/edit/<%= grocery.id %>" class="btn btn-sm btn-warning">Edit</a></td>
			<td><a href="/grocery/destroy/<%= grocery.id %>" class="btn btn-sm btn-danger">Delete</a></td>
		</tr>

		<%	}) %>
	</table>
</div>